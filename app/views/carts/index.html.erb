<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.product.title %></td>
        <td><%= cart.product.price %></td>
<!--        <td><%#= link_to 'Show', cart %></td>-->
<!--        <td><%#= link_to 'Edit', edit_cart_path(cart) %></td>-->
        <td><%= link_to 'Remove Product from cart', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

