<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>Upload one image of your product here:</p>
  <div class="field">
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <p>Add the price in AUD</p>
  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <p>Answer this questions about your product in the description:
    <ul>
      <li>How old is the seedling / plant?</li>
    </ul>
  </p>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <% form.label :seller_id %>
    <% form.text_field :seller_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
