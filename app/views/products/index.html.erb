<div class="all_heading">My Products</div>

<div class="one_category_page">

    <% @products.each do |product| %>
      <div class="one_category_each_product">
        <div class="one_category_each_product_image"><%= image_tag(product.image, width: 200, height: 200) %></div>
          <%= product.title %><br />
          AUD$<%= product.price %><br />
          Category:<%= product.category %><br />
          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div><br /><br />
    <% end %>
  </div>
</div>

