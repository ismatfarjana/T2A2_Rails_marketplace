<p id="notice"><%= notice %></p>

<div class="all_heading">My Products</div>

<div class="one_category_page">
  <% @products.each do |product| %>
    <%= link_to(product) do %>
      <div class="one_category_each_product">
        <div class="one_category_each_product_image">
          <%= image_tag(product.image, width: 200, height: 200) %>
        </div>
        <div class="one_category_each_product_description_1">
          <% if product.title.present? %>
            <h2><%= product.title.capitalize %></h2>
          <% else %>
            <h2>Tile Required</h2>
          <% end %>
          <% if product.category.present? %>
            <h4><%= product.category.capitalize %></h4>
          <% else %>
            Category Required
          <% end %>
          <% if product.price.present? %>
            AUD$<%= product.price %>
          <% else %>
            Price Required
          <% end %>
        </div>
        <div class="product_access_button">
          <div class="one_button">
            <%= link_to 'Edit Product', edit_product_path(product) %>
          </div>
          <div class="one_button">
            <%= link_to 'Delete Product', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>

    <% end %>

  <% end %>



</div>



<br>

