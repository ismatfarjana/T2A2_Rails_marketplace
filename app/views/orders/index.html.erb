<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Paid</th>
      <th>Amount</th>
      <th>Decimal</th>
      <th>Fulfilled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.buyer %></td>
        <td><%= order.seller %></td>
        <td><%= order.paid %></td>
        <td><%= order.amount %></td>
        <td><%= order.decimal %></td>
        <td><%= order.fulfilled %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

